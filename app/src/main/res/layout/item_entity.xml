<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/textArtworkTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Artwork Title"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnViewDetails"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textArtist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Artist"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnViewDetails"
        app:layout_constraintTop_toBottomOf="@id/textArtworkTitle"/>

    <TextView
        android:id="@+id/textMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Medium"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnViewDetails"
        app:layout_constraintTop_toBottomOf="@id/textArtist"/>

    <TextView
        android:id="@+id/textYear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Year"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnViewDetails"
        app:layout_constraintTop_toBottomOf="@id/textMedium"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btnViewDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
