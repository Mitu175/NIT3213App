<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.nit3213app.ui.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.nit3213app.ui.DashboardFragment"
        android:label="Dashboard" >
        <action
            android:id="@+id/action_dashboardFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />

    <argument
        android:name="keypass"
        app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.nit3213app.ui.DetailsFragment"
        android:label="Details">
        <argument
            android:name="artwork"
            app:argType="com.example.nit3213app.model.Artwork" />
    </fragment>


</navigation>
